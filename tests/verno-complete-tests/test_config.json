{
  "projectConfig": {
    "name": "Verno去中心化科研平台",
    "version": "1.0.0",
    "description": "CCF第四届大学生区块链技术与创新应用竞赛项目",
    "testSuite": "完整系统测试"
  },
  "services": {
    "frontend": {
      "name": "Vue.js前端",
      "url": "http://localhost:5173",
      "timeout": 10,
      "expectedPages": [
        "/", "/dashboard", "/projects", "/datasets", 
        "/publications", "/reviews", "/nft", "/proof", 
        "/influence", "/verification"
      ]
    },
    "goService": {
      "name": "Go链下服务",
      "url": "http://localhost:8088",
      "timeout": 5,
      "healthEndpoint": "/health",
      "apiEndpoints": [
        "/api/hybrid/stats",
        "/api/hybrid/nfts",
        "/api/hybrid/verify/demo-token-123",
        "/api/hybrid/compare"
      ]
    }
  },
  "database": {
    "type": "SQLite",
    "path": "../../desci.db",
    "requiredTables": [
      "users", "projects", "datasets", "publications", 
      "reviews", "nfts", "activity_logs", "zk_proofs", 
      "citations", "research_data", "event_logs"
    ],
    "minSize": 1000
  },
  "projectStructure": {
    "criticalFiles": [
      "package.json",
      "frontend/package.json",
      "services/chain-api/go.mod",
      "hardhat.config.js",
      "docker-compose.yml",
      "README.md",
      ".gitignore"
    ],
    "smartContracts": [
      "contracts/DeSciPlatform.sol",
      "contracts/ResearchNFT.sol",
      "contracts/DatasetManager.sol", 
      "contracts/ZKPVerifier.sol",
      "contracts/InfluenceRanking.sol"
    ],
    "dependencies": {
      "frontend": "frontend/node_modules",
      "goService": "services/chain-api/go.sum"
    }
  },
  "performance": {
    "thresholds": {
      "apiResponseTime": {
        "excellent": 100,
        "good": 500,
        "acceptable": 1000
      },
      "pageLoadTime": {
        "excellent": 2000,
        "good": 5000,
        "acceptable": 10000
      },
      "databaseQuery": {
        "excellent": 50,
        "good": 200,
        "acceptable": 500
      }
    },
    "concurrency": {
      "minUsers": 10,
      "targetUsers": 50,
      "maxUsers": 100
    },
    "successRate": {
      "minimum": 95,
      "target": 99,
      "excellent": 99.9
    }
  },
  "security": {
    "sensitiveFiles": [
      ".env", "private.key", "secret.json", 
      "wallet.json", "mnemonic.txt"
    ],
    "requiredInGitignore": [
      ".env", "node_modules", "*.log", 
      "dist", "build", "coverage"
    ],
    "securityHeaders": [
      "Access-Control-Allow-Origin",
      "Content-Security-Policy",
      "X-Frame-Options"
    ]
  },
  "testCategories": {
    "infrastructure": {
      "name": "基础设施测试",
      "weight": 30,
      "tests": [
        "project_structure",
        "dependencies", 
        "smart_contracts",
        "database"
      ]
    },
    "services": {
      "name": "服务功能测试", 
      "weight": 40,
      "tests": [
        "frontend_service",
        "go_service",
        "go_api_endpoints"
      ]
    },
    "performance": {
      "name": "性能测试",
      "weight": 20,
      "tests": [
        "response_time",
        "concurrent_users",
        "database_performance"
      ]
    },
    "security": {
      "name": "安全测试",
      "weight": 10,
      "tests": [
        "security_config",
        "sensitive_files",
        "input_validation"
      ]
    }
  },
  "competitionCriteria": {
    "technicalInnovation": {
      "weight": 25,
      "aspects": [
        "混合查询架构创新性",
        "零知识证明应用",
        "DAO治理机制实现",
        "科研成果NFT化"
      ]
    },
    "functionalCompleteness": {
      "weight": 25,
      "aspects": [
        "全栈技术实现",
        "核心功能完整性",
        "用户体验设计",
        "系统集成度"
      ]
    },
    "implementationQuality": {
      "weight": 25,
      "aspects": [
        "代码质量",
        "性能表现",
        "安全性",
        "可扩展性"
      ]
    },
    "practicalValue": {
      "weight": 25,
      "aspects": [
        "问题解决能力",
        "商业价值",
        "市场前景",
        "社会影响"
      ]
    }
  },
  "reporting": {
    "formats": ["console", "markdown", "json"],
    "outputDir": "./test-results",
    "includeMetrics": true,
    "generateCharts": false,
    "detailLevel": "comprehensive"
  },
  "environment": {
    "development": {
      "frontendUrl": "http://localhost:5173",
      "backendUrl": "http://localhost:3000", 
      "goServiceUrl": "http://localhost:8088",
      "databasePath": "../../desci.db"
    },
    "testing": {
      "frontendUrl": "http://localhost:5174",
      "backendUrl": "http://localhost:3001",
      "goServiceUrl": "http://localhost:8089", 
      "databasePath": "../../test_desci.db"
    },
    "staging": {
      "frontendUrl": "https://staging.verno.com",
      "backendUrl": "https://api-staging.verno.com",
      "goServiceUrl": "https://go-staging.verno.com",
      "databasePath": "/var/lib/verno/staging_desci.db"
    },
    "production": {
      "frontendUrl": "https://verno.com",
      "backendUrl": "https://api.verno.com", 
      "goServiceUrl": "https://go.verno.com",
      "databasePath": "/var/lib/verno/desci.db"
    }
  },
  "notifications": {
    "onSuccess": {
      "enabled": false,
      "webhook": "",
      "message": "Verno平台测试全部通过！"
    },
    "onFailure": {
      "enabled": true,
      "webhook": "",
      "message": "Verno平台测试发现问题，请检查！"
    },
    "onWarning": {
      "enabled": false,
      "webhook": "",
      "message": "Verno平台测试发现警告项目"
    }
  },
  "metadata": {
    "createdBy": "Verno开发团队",
    "createdDate": "2025-10-21",
    "lastUpdated": "2025-10-21",
    "version": "1.0.0",
    "description": "Verno去中心化科研平台完整测试配置文件，用于CCF区块链竞赛项目的全面质量保证"
  }
}
