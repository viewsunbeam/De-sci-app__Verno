{
  "name": "verno-desci-platform",
  "version": "1.0.0",
  "description": "Verno - Decentralized Science Research Platform with NFT minting, dataset management, and privacy-preserving features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"cd frontend && npm run dev\" \"npm start\"",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "deploy-contracts": "npx hardhat run deployEnhancedDeSci.js --network localhost && npm run sync-contracts",
    "start-blockchain": "npx hardhat node",
    "start-full": "./start-platform.sh",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sync-contracts": "node scripts/sync-contracts.js",
    "chain-api:start": "cd services/chain-api && go run cmd/server/main_simple.go"
  },
  "keywords": [
    "decentralized-science",
    "blockchain",
    "nft",
    "research",
    "data-sharing",
    "privacy",
    "web3"
  ],
  "author": "Verno Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.13.0",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "multer": "^2.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "chai": "^4.5.0",
    "concurrently": "^8.2.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  }
}
